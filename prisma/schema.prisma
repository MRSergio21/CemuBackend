generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Administrator {
  id         Int          @id @default(autoincrement())
  username   String       @map("username")
  email      String       @unique
  password   String       @map("password")

  @@map("administrator")
}

model Company {
  id         Int          @id @default(autoincrement())
  name       String
  internships Internship[]

  @@map("company")

}

model Degree {
  id         Int          @id @default(autoincrement())
  name       String
  internships Internship[]

  @@map("degree")
}

enum Modality {
  Onsite
  Remote
  Hybrid
}

enum InternshipType {
  Curricular
  Extracurricular
}

enum Workday {
  FullTime @map("Full Time")
  PartTime @map("Part Time")
}

model Internship {
  id                  Int      @id @default(autoincrement())
  internshipTitle     String   @map("internship_title")
  internshipLocation  String   @map("internship_location")
  salary              Int? 
  modality            Modality
  internshipType      InternshipType @map("internship_type")
  workday             Workday
  minimumStudies      String @map("minimum_studies")
  languages           String
  startDate           DateTime @map("start_date")
  period              String  @map("period")
  minimumExperience   String  @map("minimum_experience")
  backgroundKnowledge String  @map("background_knowledge")
  description         String

  company    Company  @relation(fields: [company_id], references: [id], onDelete: Cascade)
  company_id Int

  degree     Degree  @relation(fields: [degree_id], references: [id], onDelete: Cascade)
  degree_id  Int

  @@map("internship")
}